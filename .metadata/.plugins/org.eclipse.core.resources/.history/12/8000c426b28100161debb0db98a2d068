package nebulous.graphics;

import static org.lwjgl.opengl.GL20.*;

public class Shader{
	
	private int programID;
	
	private int vertexID;
	private int fragmentID;
	
	public Shader(String vertex, String fragment){
		this.programID = genProgram();
		this.vertexID = attachVertex(vertex);
		this.fragmentID = attachFragment(fragment);
	}
	
	public int attachVertex(String vertex){
		int fID = glCreateShader(GL_VERTEX_SHADER);
		return fID;
	}
	
	public int attachFragment(String fragment){
		int shaderID = glCreateShader(GL_FRAGMENT_SHADER);
		glShaderSource(shaderID, fragment);
		glCompileShader(shaderID);
		glAttachShader(programID, shaderID);
		return shaderID;
	}
	
	public int genProgram(){
		int pID = glCreateProgram();
		return pID;
	}
	
	public void bind(){
		glUseProgram(programID);
	}
	
	public void unbind(){
		glUseProgram(0);
	}

}
