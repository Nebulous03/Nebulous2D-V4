	private int vertexID;
	private int fragmentID;
	
	public Shader(String vertex, String fragment){
		this.vertexID = genVertex(vertex);
		this.fragmentID = genFragment(fragment);
		this.programID = genProgram(vertexID, fragmentID);
	}
	
	public int genVertex(String vertex){
		return 0;
	}
	
	public int genFragment(String fragment){
		return 0;
	}
	
	public int genProgram(int vertexID, int fragmentID){
		return 0;
	}
	
	public void bind(){
		glBindProgram(programID);
	}
	
	public void unbind(){
		glBindProgram(0);
	}

}
