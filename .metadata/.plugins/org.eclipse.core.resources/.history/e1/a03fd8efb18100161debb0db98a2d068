package nebulous.graphics;

import static org.lwjgl.opengl.GL20.*;

public class Shader{
	
	private int programID;
	
	private int vertexID;
	private int fragmentID;
	
	public Shader(String vertex, String fragment){
		this.vertexID = genVertex(vertex);
		this.fragmentID = genFragment(fragment);
		this.programID = genProgram(vertexID, fragmentID);
	}
	
	public int genVertex(String vertex){
		int fID = glCreateShader(GL_VERTEX_SHADER);
		return fID;
	}
	
	public int genFragment(String fragment){
		int fID = glCreateShader(GL_FRAGMENT_SHADER);
		glShaderSource(fID, fragment);
		glCompileShader(shader);
		return fID;
	}
	
	public int genProgram(int vertexID, int fragmentID){
		int pID = glCreateProgram();
		return pID;
	}
	
	public void bind(){
		glUseProgram(programID);
	}
	
	public void unbind(){
		glUseProgram(0);
	}

}
